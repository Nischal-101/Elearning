@model DatabaseCW.Models.StudentModel

@{
    CountryModel countryModel = ViewBag.SqlData;
    Layout = "../Shared/_DashboardLayout";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 30px;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: 0 auto;
        }

        input[type="text"],
        input[type="date"],
        select {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            padding: 16px 24px; /* Increased padding for a larger button */
            margin: 20px 0; /* Increased margin to separate button from other elements */
            border: none;
            border-radius: 8px; /* Rounded corners */
            cursor: pointer;
            width: 100%;
            font-size: 16px; /* Increased font size */
        }

            input[type="submit"]:hover {
                background-color: #45a049;
            }

        label {
            font-weight: bold;
            color: #333;
        }
        /* Additional Styles */
        label,
        option {
            color: #555;
        }

        input[type="text"],
        input[type="date"],
        select,
        button {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>

    <h1>Student Details</h1>

    <form method="post" asp-action="Update" asp-controller="Student">
        <div>
            <p><label for="StudentId">Student ID:</label> <input type="text" id="StudentId" name="StudentId" value="@Model.StudentId" readonly></p>
            <p><label for="StudentName">Name:</label> <input type="text" id="StudentName" name="StudentName" value="@Model.StudentName"></p>
            <p><label for="Contact">Contact:</label> <input type="text" id="Contact" name="Contact" value="@Model.Contact"></p>
            <p><label for="DOB">DOB:</label> <input type="date" id="DOB" name="DOB" value="@Model.DOB.ToString("yyyy-MM-dd")"></p>
            <p><label for="Email">Email:</label> <input type="text" id="Email" name="Email" value="@Model.Email"></p>
            <p>
                <label for="countryDropdown">Country:</label>
                <select id="countryDropdown" name="Zip">
                    @foreach (var data in countryModel.country)
                    {
                        <option value="@data.Zip" selected="@(data.Country == Model.Country )">@data.Country</option>
                    }
                </select>
            </p>
            <button type="submit">Update</button>
        </div>
    </form>

</body>
</html>
